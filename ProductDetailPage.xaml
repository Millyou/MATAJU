<Page x:Class="WpfApp2.ProductDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Product Detail">

    <Grid>
        <StackPanel>
            <Button x:Name="backBtn" Content="뒤로가기" HorizontalAlignment="Right" Click="backBtn_Click" Margin="0,10,30,0"></Button>
            <!-- 상품 이미지 표시 -->
            <Image x:Name="ProductImage" Width="300" Height="300" />
            <!-- 상품 주소 표시 -->
            <TextBlock x:Name="ProductAddress" FontSize="16" Margin="10" />
        </StackPanel>

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,1,0">
            <!-- Frame for navigation -->
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />

            <!-- 이미지 -->

        </Grid>
    </Grid>
</Page>
